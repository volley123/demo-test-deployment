{
    "compilerOptions": {
      "target": "ES6",                  // Or a higher version, like ES2020
      "module": "CommonJS",
      "lib": ["ES6"],                    // Use "ES6" or "ES2020" to support console, async/await, etc.
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  