{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ES2020", "DOM"],         // Include ES2020 and DOM for full support of global objects
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node"]                 // Explicitly include Node.js types for Lambda environment
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  